{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./app.css"
      },
      {
        "type": "script",
        "src": "./app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "goal": {
        "order": 1,
        "title": "What do you want to do?",
        "type": "string",
        "format": "radios",
        "enum": [
        "email",
        "page",
        "message"
        ],
        "enumNames": {
        "email": "Sign them up for a newsletter",
        "page": "Redirect them to a special page",
        "message": "Just show a message"
        },
        "default": "email"
        },
        "emailButtonText": {
          "order": 2,
          "title": "Email Button Text",
          "showIf": {
            "goal": "email"
          },
          "type": "string",
          "default": "Sign up now!"
          },
          "emailPlaceholderText": {
            "order": 3,
            "title": "Email Placeholder Text",
            "showIf": {
              "goal": "email"
            },
            "type": "string",
            "default": "Enter your email address"
          },          
          "emailButtonColor": {
          "order": 4,
          "title": "Email Button Color",
          "showIf": {
            "goal": "email"
            },
          "type": "string",
          "format": "color",
          "default": "#811515"
          },
          "emailButtonTextColor": {
          "order": 5,
          "title": "Email Button Text Color",
          "showIf": {
            "goal": "email"
            },
          "type": "string",
          "format": "color",
          "default": "#a4747f"
          },
          "headingEmail": {
            "order": 6,
            "title": "Heading",
            "showIf": {
              "goal": "email"
            },
            "type": "string",
            "default": "Get our newsletter!"
          },
          "messageEmail": {
            "order": 7,
            "title": "Message",
            "showIf": {
              "goal": "email"
            },
            "description": "You may include links and style the message with Markdown. <a target=\"_blank\" href=\"https://en.wikipedia.org/wiki/Markdown#Example\" class=\"more with-inherited-color\"><strong>Learn more</strong></a>",
            "type": "string",
            "format": "markdown",
            "default": "Stay up to date with all of our current news!"
          },
          "headingEmailPost": {
            "order": 8,
            "title": "Post Signup Heading",
            "showIf": {
              "goal": "email"
            },
            "type": "string",
            "default": "Thanks!"
          },
          "messageEmailPost": {
            "order": 9,
            "title": "Post Signup Message",
            "showIf": {
              "goal": "email"
            },
            "description": "You may include links and style the message with Markdown. <a target=\"_blank\" href=\"https://en.wikipedia.org/wiki/Markdown#Example\" class=\"more with-inherited-color\"><strong>Learn more</strong></a>",
            "type": "string",
            "format": "markdown",
            "default": "You will now regularly hear about our new events and information!"
          },
        "buttonText": {
          "order": 10,
          "title": "Button text",
          "showIf": {
            "goal": "page"
            },
          "type": "string",
          "default": "Let's go!"
        },
        "buttonLink": {
          "order": 11,
          "title": "Button Link",
          "showIf": {
            "goal": "page"
            },
          "type": "string",
          "default": "http://eager.io"
        },
        "buttonColor": {
          "order": 12,
          "title": "Button Color",
          "showIf": {
            "goal": "page"
            },
          "type": "string",
          "format": "color",
          "default": "#811515"
          },
        "buttonTextColor": {
          "order": 13,
          "title": "Button Text Color",
          "showIf": {
            "goal": "page"
            },
          "type": "string",
          "format": "color",
          "default": "#a4747f"
          },
          "headingPage": {
            "order": 14,
            "title": "Heading",
            "showIf": {
              "goal": "page"
            },
            "type": "string",
            "default": "Discounts up to 75% off!"
          },
          "messagePage": {
            "order": 15,
            "title": "Message",
            "showIf": {
              "goal": "page"
            },
            "description": "You may include links and style the message with Markdown. <a target=\"_blank\" href=\"https://en.wikipedia.org/wiki/Markdown#Example\" class=\"more with-inherited-color\"><strong>Learn more</strong></a>",
            "type": "string",
            "format": "markdown",
            "default": "Click the button below to learn more!"
          },
        "headingMessage": {
        "order": 16,
        "title": "Heading",
        "showIf": {
          "goal": "message"
        },
        "type": "string",
        "default": "Announcement!"
      },
      "messageMessage": {
        "order": 17,
        "title": "Message",
        "showIf": {
          "goal": "message"
        },
        "description": "You may include links and style the message with Markdown. <a target=\"_blank\" href=\"https://en.wikipedia.org/wiki/Markdown#Example\" class=\"more with-inherited-color\"><strong>Learn more</strong></a>",
        "type": "string",
        "format": "markdown",
        "default": "We would all like to thank you for visiting our site, and we hope you have a great day!"
      },   
      "imageToggle": {
        "order": 18,
        "type": "boolean",
        "title": "Show a Cover Image",
        "default": true
      },
      "image": {
        "order": 19,
        "title": "Cover Image",
        "description": "Optionally display an image above your message.",
        "type": "string",
        "format": "image",
        "showIf": "imageToggle",
        "default": "//eager-app-images.imgix.net/IaYSbxMqTBGYpIrJJzSb_2016.png"
      },
      "theme": {
        "order": 20,
        "title": "Theme",
        "type": "string",
        "enum": [
          "light",
          "dark"
        ],
        "enumNames": {
          "light": "Light",
          "dark": "Dark"
        },
        "default": "light"
      },
      "showFrequency": {
        "order": 21,
        "title": "Show frequency",
        "type": "string",
        "default": "once",
        "enum": ["once", "always"],
        "enumNames": {
          "once": "Show to each visitor once",
          "always": "Show on every page view"
        }
      },
      "hideBeforeToggle": {
        "order": 22,
        "type": "boolean",
        "title": "Hide the message before a specific date",
        "default": false
      },
      "hideBefore": {
        "order": 23,
        "type": "string",
        "format": "date",
        "title": "Hide Before",
        "description": "The message will always be shown in the preview, but it will be hidden to your site’s visitors before this date.",
        "showIf": "hideBeforeToggle",
        "default": "30-12-2016"
      },
      "hideAfterToggle": {
        "order": 24,
        "type": "boolean",
        "title": "Hide the message after a specific date",
        "default": false
      },
      "hideAfter": {
        "order": 25,
        "type": "string",
        "format": "date",
        "title": "Hide After",
        "description": "The message will always be shown in the preview, but it will be hidden to your site’s visitors after this date.",
        "showIf": "hideAfterToggle",
        "default": "1-1-2017"
      }
    }
  }
}
